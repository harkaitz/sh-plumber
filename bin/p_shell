##:
#h: Usage: $0 [-show|DIRECTORY|FILENAME]
##:
p_shell() {
    local cmd="$1" pwd="`pwd`"
    shift
    case "${cmd}" in
        -show) p_shell_show_variables ;;
        *)     if test -d "${cmd}"; then
                   cd "${cmd}"
                   mkdir -p ~/.log
                   nohup "${P_TERMINAL}" -e "${P_SHELL}" > ~/.log/p_shell.log 2>&1 &
                   cd "${pwd}"
               elif test -e "${cmd}"; then
                   cd "`dirname "${cmd}"`"
                   mkdir -p ~/.log
                   nohup "${P_TERMINAL}" -e "${P_SHELL}" > ~/.log/p_shell.log 2>&1 &
                   cd "${pwd}"
               fi
               ;;
    esac
}
p_shell_show_variables() {
    printf '%-20s : %s\n'             \
           P_TERMINAL "${P_TERMINAL}" \
           P_SHELL    "${P_SHELL}"
}
p_shell_calc_variables() {
    P_TERMINAL="${P_TERMINAL:-st}"
    P_SHELL="${P_SHELL:-bash}"
}
## -----------------------------------------------------------------------------


## -----------------------------------------------------------------------------
p_shell_calc_variables
SCRNAME="`basename "$0"`"
if test @"${SCRNAME}" = @"p_shell";then
    case "${1}" in
        ''|-h|--help)
            sed -n 's/^ *#h: \{0,1\}//p' "$0" | sed "s|\\\$0|${SCRNAME}|g"
            echo ""
            sed -n 's/^ *#l: \{0,2\}//p' "$0"
            ;;
        plumbs)
            if test ! @"${P_MODE}" = @"display"; then
                true
            elif test -d "${2}"; then
                echo "Open directory on the terminal."
            elif test -ex "${2}"; then
                echo "Open a shell in '`dirname "${2}"`'."
            fi
            ;;
        *)
            p_shell "$@"
            ;;
    esac
fi
