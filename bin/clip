##:
#h: Usage: clip FILE|-|%
#h:
#h: Put text in X clipboards (clipboard/primary/secondary).
#h:
#h: -    : Read from standard input.
#h: FILE : Read from file.
#h: %    : Print the selection.
##:
clip() {
    check_xclip
    local filename="$1"
    if test @"${filename}" = @"-";then
        local text="`cat`"
    elif test @"${filename}" = @"%";then
        xclip -selection "clipboard" -out
        return 0
    else
        local text="`cat "${filename}"`"
    fi
    printf '%s\n' "${text}" | xclip -selection "clipboard"
    printf '%s\n' "${text}" | xclip -selection "primary"
    printf '%s\n' "${text}" | xclip -selection "secondary"
}
check_xclip() {
    if ! which xclip >/dev/null 2>&1;then
        echo "clip: error: Please install 'xclip'." >&2
        exit 1
    fi
}
## -----------------------------------------------------------------------------
SCRNAME="`basename "$0"`"
if test @"${SCRNAME}" = @"clip";then
    if test -n "$1";then
        clip "$@"
    else
        sed -n 's/^ *#h: \{0,1\}//p' "$0" | sed "s|\\\$0|`basename $0`|g"
        echo ""
        sed -n 's/^ *#l: \{0,2\}//p' "$0"
    fi
fi
